void Client::getKillVoted(int voterId, int playerCount)
{
	if (isDead) return;

	if (voterId < 0 || voterId >= playerCount) {
		throw std::string("id out of range!");
	}

	killVotes[voterId] = 1;

	int getKilled = 1;
	for (int i = 0; i < playerCount; i++) {
		if (killVotes[i] == 0) {
			getKilled = 0;
			break;
		}
	}

	if (getKilled) {
		die();
	}
}

